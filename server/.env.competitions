# ==============================================
# CONFIGURACIÓN DE COMPETICIONES DE FÚTBOL
# ==============================================

# Competiciones habilitadas para sincronización masiva
# Formato: ID1,ID2,ID3... (separados por comas)
ENABLED_COMPETITION_IDS=2019,2021,2014,2002,2015,2003,2017

# Configuración individual de competiciones (opcional)
# Formato: ID:nombre:codigo:pais:habilitada
COMPETITION_2019=2019:Serie A:SA:Italy:true
COMPETITION_2021=2021:Premier League:PL:England:true
COMPETITION_2014=2014:La Liga:PD:Spain:true
COMPETITION_2002=2002:Bundesliga:BL1:Germany:true
COMPETITION_2015=2015:Ligue 1:FL1:France:true
COMPETITION_2003=2003:Eredivisie:DED:Netherlands:true
COMPETITION_2017=2017:Primeira Liga:PPL:Portugal:true

# Configuración por defecto para nuevas competiciones
DEFAULT_COMPETITION_ENABLED=true

# ==============================================
# OTRAS CONFIGURACIONES RELACIONADAS
# ==============================================

# Límite de equipos por competición (0 = sin límite)
MAX_TEAMS_PER_COMPETITION=0

# Intervalo de sincronización automática (en horas)
AUTO_SYNC_INTERVAL_HOURS=24

# Habilitar sincronización automática de todas las competiciones
AUTO_SYNC_ALL_ENABLED=true
